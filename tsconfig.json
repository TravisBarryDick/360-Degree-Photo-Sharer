{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
